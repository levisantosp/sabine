{
  "compilerOptions": {
    "target": "ES2023",
    "module": "nodenext",
    "outDir": "./dist",
    "lib": ["ES2023", "DOM"],
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                 
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true
  },
  "include": ["src", "env.d.ts"],
  "exclude": ["node_modules", "types"]
}